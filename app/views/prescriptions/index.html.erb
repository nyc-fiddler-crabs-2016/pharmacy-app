  <ul>
    <% @prescriptions.each do |prescription| %>
      <li><%= prescription.medicine_name %>, prescribed <%= prescription.prescribed_date %>, for <%= prescription.patient_name %></li>
      <%= link_to "Edit this record", edit_prescription_path(id: prescription.id) %><br>
      <%= link_to "Delete this record", prescription, method: :delete, data: {confirm: "Are you sure you want to delete this record?"} %>
    <% end %>
  </ul>
